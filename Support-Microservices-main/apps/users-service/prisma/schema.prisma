generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("USERS_DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
  SUPPORT
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
}
